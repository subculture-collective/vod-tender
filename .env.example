# Global stack/name to distinguish multiple instances
STACK_NAME=vod

# Compose external network to attach to (must exist)
WEB_NETWORK=web

# Instance identity
TWITCH_CHANNEL=

# Ports (host:container) - Change these if you have conflicts with other services
API_PORT=8090
FRONTEND_PORT=3090
JAEGER_UI_PORT=16690
JAEGER_OTLP_GRPC_PORT=4320
JAEGER_OTLP_HTTP_PORT=4321

# Postgres settings
DB_NAME=vod
DB_USER=vod
DB_PASSWORD=vod
DB_HOST=postgres

# Backend env file path (inside repo)
BACKEND_ENV_FILE=./backend/.env

# Secrets directory with Netscape cookies file
SECRETS_DIR=./secrets
# Inside container cookies path
YTDLP_COOKIES_PATH=/run/cookies/twitch-cookies.txt
